<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Gooding" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

        <item name="android:windowBackground">@color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CustomSwitchCompat" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumb">@drawable/selector_thumb</item>
        <item name="android:track">@drawable/selector_track</item>
    </style>
    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/pretendard_medium</item>
    </style>
</resources>